<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardElevation="@dimen/_1sdp"
    app:cardMaxElevation="@dimen/_1sdp"
    android:background="@drawable/ripple_effect"
    app:cardCornerRadius="5dp">
   <LinearLayout
       android:background="@drawable/ripple_effect"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_weight="0.3"
           android:id="@+id/ltyCategory"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_130sdp"
           android:orientation="horizontal">

           <ImageView
               android:layout_marginLeft="@dimen/_10sdp"
               android:src="@drawable/loading_image"
               android:id="@+id/imageView_image"
               android:layout_width="@dimen/_70sdp"
               android:layout_height="@dimen/_70sdp"
               android:scaleType="fitXY" />
           <LinearLayout

                android:layout_weight="0.3"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center">
               <TextView
                   android:id="@+id/textView_id"
                   android:visibility="gone"
                   android:padding="4dp"
                   android:textColor="@color/orange"
                   android:inputType="textCapCharacters"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:text="hello"
                   android:textSize="14sp"
                   android:layout_marginLeft="@dimen/_15sdp"
                   android:layout_centerInParent="true" />
               <TextView
                   android:id="@+id/textView_title"
                   android:padding="4dp"
                   android:inputType="textCapCharacters"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:text="hello"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_15ssp"
                   android:layout_marginLeft="@dimen/_16sdp"
                   android:layout_centerInParent="true" />
               <TextView
                   android:id="@+id/textView_description"
                   android:paddingLeft="4dp"
                   android:paddingRight="4dp"
                   android:paddingBottom="4dp"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:text="desc"
                   android:textColor="@color/black"
                   android:textSize="12sp"
                   android:layout_marginLeft="@dimen/_15sdp"
                   android:layout_centerInParent="true" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_weight="0.5"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:id="@+id/textView_qty"
                       android:paddingLeft="4dp"
                       android:gravity="center"
                       android:paddingRight="4dp"
                       android:paddingBottom="@dimen/_4sdp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text="qty"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_13ssp"
                       android:layout_marginBottom="@dimen/_1sdp"
                       android:layout_marginLeft="@dimen/_15sdp"
                       android:layout_centerInParent="true" />
                   <TextView
                       android:gravity="right"
                       android:layout_weight="0.5"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:layout_marginRight="@dimen/_5sdp"
                       android:id="@+id/textView_temp_price"
                       android:paddingLeft="4dp"
                       android:paddingRight="4dp"
                       android:paddingBottom="@dimen/_4sdp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text="tempvalue"
                       android:textColor="@color/grey"
                       android:textSize="@dimen/_13ssp"
                       android:layout_marginBottom="@dimen/_1sdp"
                       android:layout_marginLeft="@dimen/_15sdp"
                       android:layout_centerInParent="true" />

               </LinearLayout>

               <LinearLayout
                   android:layout_marginTop="@dimen/_5sdp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView

                       android:gravity="center"
                       android:layout_weight="0.5"
                       android:id="@+id/textView_product_discount"
                       android:padding="2dp"
                       android:layout_width="@dimen/_170sdp"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text="@string/line"
                       android:background="@drawable/rectangle_shape2"
                       android:textStyle="bold"
                       android:textColor="@color/colorGreen"
                       android:textSize="12sp"
                       android:layout_marginLeft="@dimen/_35sdp"
                       android:layout_centerInParent="true" />
                   <TextView
                       android:gravity="right"
                       android:layout_weight="0.5"
                       android:id="@+id/textView_prize"
                       android:paddingLeft="4dp"
                       android:layout_marginRight="@dimen/_5sdp"
                       android:paddingRight="4dp"
                       android:paddingBottom="@dimen/_4sdp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text="prize"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_13ssp"
                       android:layout_marginBottom="@dimen/_1sdp"
                       android:layout_marginLeft="@dimen/_15sdp"
                       android:layout_centerInParent="true" />

               </LinearLayout>
               <LinearLayout
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_width="@dimen/_120sdp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/txt_Minus"
                       android:layout_weight="0.3"
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_25sdp"
                       android:gravity="center"
                       android:text="-"
                       android:background="@drawable/rectangle_shape"
                       android:textSize="@dimen/_11sdp"
                       android:layout_marginRight="@dimen/_2sdp"
                       android:textColor="@color/colorPrimary"
                       android:layout_marginBottom="@dimen/_10sdp"
                       />

                   <TextView
                       android:id="@+id/txt_One"
                       android:layout_weight="0.2"
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_25sdp"
                       android:gravity="center"
                       android:text="0"
                       android:background="@drawable/rectangle_shape"
                       android:textSize="@dimen/_11sdp"
                       android:layout_marginBottom="@dimen/_10sdp"
                       android:textColor="@color/colorPrimary"/>

                   <TextView
                        android:visibility="gone"
                       android:id="@+id/txt_Add"
                       android:layout_weight="0.2"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_25sdp"
                       android:gravity="center"
                       android:text=""
                       android:layout_marginLeft="@dimen/_3sdp"
                       android:background="@drawable/rectangle_shape"
                       android:textSize="@dimen/_11sdp"
                       android:textColor="@color/colorPrimary"
                       android:layout_marginBottom="@dimen/_10sdp"
                       />
                   <TextView
                       android:id="@+id/txt_plus"
                       android:layout_weight="0.3"
                       android:layout_width="@dimen/_100sdp"
                       android:layout_height="@dimen/_25sdp"
                       android:text="Add"
                       android:layout_marginLeft="@dimen/_3sdp"
                       android:gravity="center"
                       android:background="@drawable/rectangle_shape"
                       android:textSize="@dimen/_8sdp"
                       android:textColor="@color/colorPrimary"
                       android:layout_marginBottom="@dimen/_10sdp"
                       />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:visibility="gone"
               android:layout_weight="0.4"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginRight="10dp"
               android:orientation="vertical">

           <!--    <android.support.v7.widget.AppCompatImageView
                   android:id="@+id/img_delete"
                   android:layout_marginLeft="@dimen/_7sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_delete"/>-->


       </LinearLayout>
   </LinearLayout>
   </LinearLayout>
</android.support.v7.widget.CardView>